{
    "exclude": [
        "node_modules",
        "src/server.tsx"
    ],
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noEmit": false,
        "strict": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext",
            "dom",
            "WebWorker"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "."
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
